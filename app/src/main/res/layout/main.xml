<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LoLInfo"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="150dp"
        />

    <Button
        android:id="@+id/button_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Champion Information"
        android:layout_marginTop="100dp"
        android:onClick="goToChampInfo"/>

    <Button
        android:id="@+id/button_stats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Statistics"
        android:layout_marginTop="40dp"
        android:onClick="goToStatistics"/>

    <Button
        android:id="@+id/button_sports"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="E-Sports"
        android:layout_marginTop="40dp"
        android:onClick="goToESports"/>
</LinearLayout>